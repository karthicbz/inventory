<div class="row">
    <h5>All Categories</h5>
    <form action="" method="POST" class="col s12">
        <div class="row">
            <div class="input-field col s10">
                <input placeholder="Category Name" id="first_name" type="text" class="validate">
                <label for="first_name">Add new category</label>
            </div>
        </div>
        <button class="btn waves-effect" type="submit">Submit</button>
    </form>
    <div class="collection">
        <%categories.map(category=>{%>
        <a href="<%=category.url%>" class="collection-item"><%=category.name%></a>
        <%})%>
    </div>
</div>