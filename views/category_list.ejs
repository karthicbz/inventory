<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="row">
      <div class="col s12 m4 l2"><%- include('partials/navbar') %></div>
      <div class="col s12 m8 l9">
        <h2><%=title%></h2>
        <ul>
          <li>
            <a href="category/update/<%=currentCategory._id%>"
              >Update Category name</a
            >
          </li>
          <li>
            <form
              action="category/delete/<%=currentCategory._id%>"
              method="post"
            >
              <input type="hidden" name="deleteCategory" />
              <button type="submit">Delete Category</button>
            </form>
          </li>
        </ul>
        <%if(childCategories.length > 0){%>
        <div class="collection">
          <%childCategories.map(category=>{%>
          <a href="<%=category.url%>" class="collection-item"
            ><%=category.name%></a
          >
          <%})%>
        </div>
        <%}else{%>
        <p>No Child Categories found</p>
        <%}%>
      </div>
    </div>
  </body>
</html>
